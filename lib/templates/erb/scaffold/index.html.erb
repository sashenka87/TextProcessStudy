<h1 class="title"><%= plural_table_name.titleize %></h1>

<div class="table-container">
  <table class="table is-fullwidth">
    <thead>
      <tr>
      <%- attributes.each do |attribute| -%>
        <th><%= attribute.human_name %></th>
      <%- end -%>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%% @<%= plural_table_name%>.each do |<%= singular_table_name %>| -%>
        <tr>
        <%- attributes.each do |attribute| -%>
          <td><%%= <%= singular_table_name %>.<%= attribute.name %> %></td>
        <%- end -%>
          <td>
            <div class="buttons">
              <%%= link_to 'View', <%= singular_table_name %>, class: "button is-small" %>
              <%%= link_to 'Edit', edit_<%= singular_table_name %>_path(<%= singular_table_name %>), class: "button is-small" %>
              <%%= link_to 'Destroy', <%= singular_table_name %>, method: :delete, data: { confirm: 'Are you sure?' },
                class: "button is-small is-danger" %>
            </div>
          </td>
        </tr>
      <%% end -%>
    </tbody>
  </table>
</div>
